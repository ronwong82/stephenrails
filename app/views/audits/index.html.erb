<p id="notice"><%= notice %></p>

<h1>Listing Audits</h1>

<table>
  <thead>
    <tr>
      <th>Matter no</th>
      <th>Barrister</th>
      <th>Matter name</th>
      <th>User</th>
      <th>Last updated</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @audits.each do |audit| %>
      <tr>
        <td><%= audit.matter_no %></td>
        <td><%= audit.barrister %></td>
        <td><%= audit.matter_name %></td>
        <td><%= audit.user %></td>
        <td><%= audit.last_updated %></td>
        <td><%= audit.amount %></td>
        <td><%= link_to 'Show', audit %></td>
        <td><%= link_to 'Edit', edit_audit_path(audit) %></td>
        <td><%= link_to 'Destroy', audit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

